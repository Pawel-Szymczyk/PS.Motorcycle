
<div class="container">

    @for (int index = 0; index < this.Images.Count; index++)
    {
        <div class="mySlides">
            <div class="numbertext"> @($"{index+1}") / @this.Images.Count</div>
            <img id="myImg" src="@this.Images[index]">
        </div>
    }

    
    <a class="prev" onclick="@(async() => await this.PlusSlides(-1))">❮</a>
    <a class="next" onclick="@(async() => await this.PlusSlides(1))">❯</a>

    <div class="caption-container">
        @*<p id="caption"></p>*@
    </div>

    <div class="row">
        @for (int index = 0; index < this.Images.Count; index++)
        {
            <div class="column">
                <img class="demo cursor" src="@this.Images[index]" onclick="@(async() => await CurrentSlide(index))" alt="The Woods">
            </div>
        }
    </div>
</div>